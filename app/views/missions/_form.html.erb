<%= form_for @mission do |f| %>
  <%= f.label :m_date, "日期" %>
  <%= f.date_select :m_date %><br />

  <%= f.label :loading_position, "裝貨地點" %>
  <%= f.select :loading_position, [["華新麗華"], ["中龍"], ["東盟"], ["七王台中"], ["七王世全"], ["唐榮"]], include_blank: " " %><br />

  <%= f.label :client_1, "目的地_1" %>
  <%= f.select :client_1, options_from_collection_for_select(@clients, :name, :name, @mission[:client_1]), include_blank: " " %><br />

  <%= f.label :client_2, "目的地_2" %>
  <%= f.select :client_2, options_from_collection_for_select(@clients, :name, :name, @mission[:client_2]), include_blank: " " %><br />

  <%= f.label :number_of_item, "數量" %>
  <%= f.select :number_of_item, [1, 2] %><br />

  <%= f.label :truck_id, "車牌" %>
  <%= f.select :truck_id, options_from_collection_for_select(@trucks.all, :id, :truck_id, @mission[:truck_id]), include_blank: " " %><br />  

  <%= f.submit %>
<% end %>