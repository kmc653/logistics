            <% @missions.each do |mission| %>
              <thead>
                <tr>
                  <th>(width="15%") #{mission.deliver_date}</th>
                  <th>(width="5%") # </th>
                  <th>(width="15%") 目的地_1 </th>
                  <th>(width="15%") 目的地_1 </th>
                  <th>(width="15%") 數量</th>
                  <th>(width="35%") 車牌</th>
                </tr>
              </thead>
            <% end %>
          <% end %>
        </table>
      </article>
    </div>
  </div>
</section>